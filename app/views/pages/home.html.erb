<div class="px-4 py-5 my-5 text-center">
  <%= image_tag "logo.jpg", class: "d-block mx-auto mb-4", width: "72"%>
  <h1 class="display-5 fw-bold">Starent</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">The best website to spend your day with your prefered star, scroll down 👇🏼 and see all the available stars to spend a day with you.</p>
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
      <button type="button" class="btn btn-primary btn-lg px-4 gap-3">Book a star</button>
    </div>
  </div>
</div>

<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% @star.each do |star| %>
      <div class="col">
        <div class="card shadow-sm">
            <%= cl_image_tag star.photo.key, class:"card-image" %>
          <div class="card-body">
            <h4 class="card-text"><%= star.name.capitalize %></h4>
            <p class="card-text border-top" id="card-price"><%= "#{star.price}$" %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", star_path(star), class: "link" %></button>
              </div>
              <small class="text-muted">🟢</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

