<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% @stars.each do |star| %>
      <div class="col">
        <div class="card shadow-sm">
            <%= cl_image_tag star.photo.key, class:"card-image" %>
          <div class="card-body">
            <h4 class="card-text"><%= star.name.capitalize %></h4>
            <p class="card-text border-top" id="card-price"><%= "#{star.price}$" %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Update", edit_star_path(star), class: "link" %></button>
              </div>
              <small class="text-muted">ðŸŸ¢</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
