<div class='show-card'>
  <div class='star-card-image'>
    <h2><%= @star.name %></h2>
    <p><%= @star.category %></p>
    <p><%= @star.country %></p>
    <p><%= @star.city %></p>
    <p><%= @star.price %></p>
</div>
<% @reviews.each do |review| %>
      <h4><%= review.content.capitalize %></h4>
      <p><%="⭐" * review.rating %></p>
    <% end %>
<%# <%= link_to “Book ‘#{@star.name}’“,  new_star_reservation_path %>
<% if policy(@star).edit? %>
    <%= link_to "Update", edit_star_path(@star) %>
  <% end %>
<% if policy(@review).new? %>
    <%= link_to "Review", new_star_review_path(@star) %>
  <% end %>
<%= link_to 'Go back', stars_path %>
